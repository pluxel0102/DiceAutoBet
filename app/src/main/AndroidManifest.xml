<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Разрешения -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- Для сохранения отладочных изображений -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- Для OpenAI API и обновлений -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Для установки обновлений -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DiceAutoBet"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".AreaConfigActivity"
            android:exported="false" />

        <activity
            android:name=".MediaProjectionRequestActivity"
            android:exported="false"
            android:theme="@style/Theme.DiceAutoBet"
            android:launchMode="singleTop"
            android:noHistory="true" />

        <!-- Активности для двойного режима -->
        <activity
            android:name=".ui.DualModeControlActivity"
            android:exported="false"
            android:theme="@style/Theme.DiceAutoBet" />

        <activity
            android:name=".ui.AdvancedDualModeActivity"
            android:exported="false"
            android:theme="@style/Theme.DiceAutoBet" />

        <activity
            android:name=".ui.DualModeAreaConfigActivity"
            android:exported="false"
            android:theme="@style/Theme.DiceAutoBet" />

        <!-- Активности для одиночного режима -->
        <activity
            android:name=".ui.SingleModeSettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.DiceAutoBet" />

        <service
            android:name=".services.AreaConfigurationService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- Сервис настройки областей для двойного режима -->
        <service
            android:name=".ui.DualModeAreaConfigService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- Сервис настройки областей для одиночного режима -->
        <service
            android:name=".ui.SingleModeAreaConfigService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- Сервис плавающего окна -->
        <service
            android:name=".services.OverlayService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaProjection|dataSync" />

        <!-- Сервис двойного режима -->
        <service
            android:name=".services.DualModeService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaProjection|dataSync" />

        <!-- Плавающий контроль двойного режима -->
        <service
            android:name=".services.DualModeFloatingControlService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- Accessibility Service для кликов -->
        <service
            android:name=".services.AutoClickService"
            android:exported="true"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <!-- FileProvider для экспорта логов -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>