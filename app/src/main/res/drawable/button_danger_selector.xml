<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/error_pressed" />
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="@color/error" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/surface_light" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="@color/text_disabled" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/error" />
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="@color/accent_blue" />
        </shape>
    </item>
</selector>
