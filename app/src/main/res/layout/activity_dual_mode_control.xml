<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".ui.DualModeControlActivity">

    <!-- Тулбар -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextColor="@color/white"
            app:subtitleTextColor="@color/white_70" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Основной контент -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Статус и управление -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎮 СТАТУС И УПРАВЛЕНИЕ"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Текущий статус -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Режим:"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/textCurrentMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ОСТАНОВЛЕН"
                            android:textStyle="bold"
                            android:textColor="@color/red" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Стратегия:"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/textCurrentStrategy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WIN_SWITCH"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Активное окно:"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/textActiveWindow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LEFT"
                            android:textColor="@color/accent" />

                    </LinearLayout>

                    <!-- Кнопки управления -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnStartDualMode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:text="▶️ СТАРТ"
                            android:backgroundTint="@color/green"
                            android:textColor="@color/white"
                            style="@style/Widget.MaterialComponents.Button" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnStopDualMode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:text="⏹️ СТОП"
                            android:backgroundTint="@color/red"
                            android:textColor="@color/white"
                            style="@style/Widget.MaterialComponents.Button" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSwitchWindow"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:text="🔄 ПЕРЕКЛЮЧИТЬ"
                            android:backgroundTint="@color/blue"
                            android:textColor="@color/white"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnOptimizePerformance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:text="⚡ УСКОРИТЬ"
                            android:backgroundTint="@color/cyan"
                            android:textColor="@color/white"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    </LinearLayout>

                    <!-- Кнопка настройки областей -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnConfigureAreas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="🎯 НАСТРОИТЬ ОБЛАСТИ ДЛЯ ДВОЙНОГО РЕЖИМА"
                        android:backgroundTint="@color/purple"
                        android:textColor="@color/white"
                        style="@style/Widget.MaterialComponents.Button" />

                    <!-- Статусное сообщение -->
                    <TextView
                        android:id="@+id/textStatusMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center"
                        android:textStyle="italic"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Визуализация окон -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📱 ВИЗУАЛИЗАЦИЯ ОКОН"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="horizontal">

                        <!-- Левое окно -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ЛЕВОЕ ОКНО"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />

                            <View
                                android:id="@+id/viewLeftWindow"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/window_border_left"
                                android:alpha="0.5" />

                        </LinearLayout>

                        <!-- Правое окно -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ПРАВОЕ ОКНО"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />

                            <View
                                android:id="@+id/viewRightWindow"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/window_border_right"
                                android:alpha="0.5" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Стратегии -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎯 СТРАТЕГИИ ИГРЫ"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="16dp" />

                    <RadioGroup
                        android:id="@+id/radioGroupStrategy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radioWinSwitch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🎲 WIN_SWITCH - При выигрыше → другое окно"
                            android:textColor="@color/text_primary"
                            android:checked="true" />

                        <RadioButton
                            android:id="@+id/radioLossDouble"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="💰 LOSS_DOUBLE - При проигрыше → другое окно + удвоение"
                            android:textColor="@color/text_primary" />

                        <RadioButton
                            android:id="@+id/radioColorAlternating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🌈 COLOR_ALTERNATING - Чередование цветов"
                            android:textColor="@color/text_primary" />

                    </RadioGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Настройки -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⚙️ НАСТРОЙКИ"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Переключатель двойного режима -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Двойной режим:"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchDualModeEnabled"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />

                    </LinearLayout>

                    <!-- Отладка изображений -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Сохранять отладочные изображения:"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/switchDebugImages"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnViewDebugImages"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="📸 Просмотреть сохраненные изображения"
                            android:textColor="@color/white"
                            app:backgroundTint="@color/primary"
                            app:cornerRadius="8dp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- Максимальные проигрыши -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Макс. проигрыши подряд:"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/textMaxLossesValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textStyle="bold"
                            android:textColor="@color/accent" />

                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderMaxLosses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="3"
                        android:valueTo="10"
                        android:stepSize="1"
                        android:value="5" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Статистика игры -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📊 СТАТИСТИКА ИГРЫ"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Общая статистика -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Всего ставок:"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textTotalBets"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textStyle="bold"
                                android:textColor="@color/accent"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Общая прибыль:"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textTotalProfit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textStyle="bold"
                                android:textColor="@color/green"
                                android:textSize="18sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Проигрыши подряд:"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textConsecutiveLosses"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textStyle="bold"
                                android:textColor="@color/red"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ожидание результата:"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textWaitingForResult"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="НЕТ"
                                android:textStyle="bold"
                                android:textColor="@color/text_secondary"
                                android:textSize="18sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Производительность -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⚡ ПРОИЗВОДИТЕЛЬНОСТЬ"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Режим производительности -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Режим:"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/textPerformanceMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NORMAL"
                            android:textStyle="bold"
                            android:textColor="@color/yellow" />

                    </LinearLayout>

                    <!-- Статистика операций -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Всего операций:"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/textTotalOperations"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textStyle="bold"
                                android:textColor="@color/accent"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Медленные:"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/textSlowOperations"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textStyle="bold"
                                android:textColor="@color/red"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Успешность:"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/textSuccessRate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="100%"
                                android:textStyle="bold"
                                android:textColor="@color/green"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Тайминги -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Детекция:"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/textDetectionInterval"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="500мс"
                                android:textStyle="bold"
                                android:textColor="@color/accent"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Реакция:"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/textReactionDelay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="100мс"
                                android:textStyle="bold"
                                android:textColor="@color/accent"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Клики:"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/textClickDelay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="200мс"
                                android:textStyle="bold"
                                android:textColor="@color/accent"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Средняя скорость реакции -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Средняя реакция:"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/textAverageReactionTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0мс"
                            android:textStyle="bold"
                            android:textColor="@color/cyan" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Синхронизация окон -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔄 СИНХРОНИЗАЦИЯ ОКОН"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Состояние окон -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Очередь левого:"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/textLeftQueueSize"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textStyle="bold"
                                android:textColor="@color/green"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Очередь правого:"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/textRightQueueSize"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textStyle="bold"
                                android:textColor="@color/green"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Статус синхронизации -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Оба окна заняты:"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/textBothWindowsBusy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="НЕТ"
                                android:textStyle="bold"
                                android:textColor="@color/green"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Готов к быстрому переключению:"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/textReadyForFastSwitch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ДА"
                                android:textStyle="bold"
                                android:textColor="@color/green"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
