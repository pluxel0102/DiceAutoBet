<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_dark_background">

    <!-- Заголовок -->
    <TextView
        android:id="@+id/tvDownloadTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📥 Загрузка обновления"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Версия -->
    <TextView
        android:id="@+id/tvDownloadVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Версия 1.0.1"
        android:textSize="14sp"
        android:textColor="#B0B0B0"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Прогресс-бар -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:max="100"
        android:progress="0"
        android:progressTint="#4CAF50"
        android:progressBackgroundTint="#2E2E2E"
        android:layout_marginBottom="12dp" />

    <!-- Процент загрузки -->
    <TextView
        android:id="@+id/tvProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0%"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Статистика -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- Загружено -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Загружено"
                android:textSize="11sp"
                android:textColor="#B0B0B0" />

            <TextView
                android:id="@+id/tvDownloaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 MB"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Скорость -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Скорость"
                android:textSize="11sp"
                android:textColor="#B0B0B0" />

            <TextView
                android:id="@+id/tvSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 MB/s"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#4CAF50" />
        </LinearLayout>

        <!-- Осталось -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Осталось"
                android:textSize="11sp"
                android:textColor="#B0B0B0" />

            <TextView
                android:id="@+id/tvTimeLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--:--"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

    <!-- Общий размер -->
    <TextView
        android:id="@+id/tvTotalSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Размер: 145 MB"
        android:textSize="12sp"
        android:textColor="#808080"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Кнопка отмены -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancelDownload"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Отменить"
        android:textColor="#E57373"
        android:enabled="true" />

</LinearLayout>
