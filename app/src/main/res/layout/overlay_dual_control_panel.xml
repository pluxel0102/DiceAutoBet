<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_background"
    android:elevation="8dp"
    android:padding="16dp"
    android:minWidth="300dp">

    <!-- Заголовок -->
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Настройка областей"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FF6200EE"
        android:textAlignment="center"
        android:layout_marginBottom="8dp" />

    <!-- Текущая область -->
    <TextView
        android:id="@+id/textCurrentArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1/6: Область ввода ставки"
        android:textSize="14sp"
        android:textColor="#FF000000"
        android:textAlignment="center"
        android:layout_marginBottom="16dp" />

    <!-- Прогресс-бар -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:max="6"
        android:progress="1"
        android:progressTint="#FF6200EE"
        android:layout_marginBottom="16dp" />

    <!-- Кнопки управления -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="✅ Сохранить"
            android:backgroundTint="#FF4CAF50"
            android:textColor="#FFFFFFFF"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnSkip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="⏭️ Пропустить"
            android:backgroundTint="#FFFF9800"
            android:textColor="#FFFFFFFF"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="❌ Отмена"
            android:backgroundTint="#FFF44336"
            android:textColor="#FFFFFFFF"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Инструкция -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите область на экране, затем нажмите 'Сохранить'"
        android:textSize="12sp"
        android:textColor="#FF757575"
        android:textAlignment="center"
        android:layout_marginTop="8dp" />

</LinearLayout>
